<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/niggereraser"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-18dp"
        android:layout_toEndOf="@+id/niggereraser"
        android:text="@string/que_quereis_de_mi">
    </TextView>

    <ToggleButton
        android:id="@+id/niggereraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ToggleButton>
<HorizontalScrollView
    android:id="@+id/niggers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/niggereraser"
    android:layout_marginTop="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <Button
            android:id="@+id/buton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
        <Button
            android:id="@+id/buton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pablo_motos">
        </Button>
    </LinearLayout>
</HorizontalScrollView>
</RelativeLayout>